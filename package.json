    "@types/jsonwebtoken": "^9.0.9",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.15.19",
    "@types/pg": "^8.15.2",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "jest-when": "^3.7.0",
    "ts-jest": "^29.3.4",
    "tsc-watch": "^6.3.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts",
      "!**/index.ts"
